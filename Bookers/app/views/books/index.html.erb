<h1>Books</h1>
<p>Find me in app/views/books/index.html.erb</p>
<h2>New book</h2>
<%= form_with model: Book.new do |f| %>
  <div class="new-book">
   
    <label>Title</label>
      <%= f.text_field :title %>
    
    <label>Body</label>
    <div class="text-area">
      <%= f.text_area :body %>
    </div>
    <div class="submit">  
      <%= f.submit 'Create Book' %>
    </div>
  </div>
<% end %>