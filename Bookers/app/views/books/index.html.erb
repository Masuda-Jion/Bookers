<h1>Books</h1>

<div class="list-title">
  <h4>Title</h4>
  <h4 class="list-title-body">Body</h4>
</div>

<% @books.each do |book|%>
    <div class="list-info">
      <span><%= book.title %></span>
      <span class="list-body-info"><%= book.body %></span>
    </div>
<% end %>

<%= link_to "削除", destroy_book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>

<h2>New book</h2>

<%= form_with model: @book do |f| %>
  <div class="new-book">
    <label>Title</label>
    <div class="text-field">
      <%= f.text_field :title %>
    </div>
    <label>Body</label>
    <div class="text-area">
      <%= f.text_area :body %>
    </div>
    <div class="submit">
      <%= f.submit 'Create Book' %>
    </div>
  </div>
<% end %>