<h1>Books</h1>



  <table>
    <tr>
      <th>Title</th>
      <th class="index-body">Body</th>
      <th colspan="3"></th>
    </tr>
    <% @books.each do |book|%>
      <tr>
        <td><%= book.title %></td>
        <td class="book-body"><%= book.body %></td>
        <td class="index-button"><%= link_to "Show", book_path(book.id) %></td>
        <td class="index-button"><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td class="index-button"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
      </tr>
    <% end %>
  </table>



<h2>New book</h2>

<div class="errors">
  <% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<%= form_with model: @book do |f| %>
  <div class="new-book">
    <label>Title</label>
    <div class="text-field">
      <%= f.text_field :title %>
    </div>
    <label>Body</label>
    <div class="text-area">
      <%= f.text_area :body %>
    </div>
    <div class="submit">
      <%= f.submit 'Create Book' %>
    </div>
  </div>
<% end %>