<h1 class="edit">Editing Book</h1>

<%= form_with model: @book, url:book_path, method: :patch do |f| %>
  <div class="new-book">
    <label>Title</label>
    <div class="text-field">
      <%= f.text_field :title %>
    </div>
    <label>Body</label>
    <div class="text-area">
      <%= f.text_area :body %>
    </div>
    <div class="submit">
      <%= f.submit 'Update Book' %>
    </div>
  </div>
<% end %>

<div class="edit-bottun">
  <%= link_to "Show", book_path %>
  <p>|</p>
  <%= link_to "Back", books_path %>
</div>
