<h1 class="edit">Editing Book</h1>

<div class="errors">
  <% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<%= form_with model: @book, url:book_path, method: :patch do |f| %>
  <div class="new-book">
    <label>Title</label>
    <div class="text-field">
      <%= f.text_field :title %>
    </div>
    <label>Body</label>
    <div class="text-area">
      <%= f.text_area :body %>
    </div>
    <div class="submit">
      <%= f.submit 'Update Book' %>
    </div>
  </div>
<% end %>

<div class="edit-bottun">
  <%= link_to "Show", book_path %>
  <p>|</p>
  <%= link_to "Back", books_path %>
</div>
